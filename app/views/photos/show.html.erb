<p id="notice"><%= notice %></p>

<figure>
  <%= image_tag @photo.image.url %>
</figure>

<p>
  <strong>Description:</strong>
  <%= @photo.description %><br>
  <strong>User:</strong>
  <%= @photo.user.email %>
</p>

<% if @photo.user == current_user %>
  <%= link_to 'Edit', edit_photo_path(@photo) %> 
<% end %>
